<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.jobagent.mapper.CityMapper">
    <select id="listFilter" resultType="org.example.jobagent.entity.City">
        select *
        from city
        <where>
            <if test="param1 != ''">
                province = #{param1}
            </if>
            <if test="param2 != ''">
                and city = #{param2}
            </if>
            <if test="param3 != ''">
                and region = #{param3}
            </if>
        </where>
        order by city_id
    </select>
</mapper>